<%- include('Header') %>
    <main id="main" class="main">
        <div class="pagetitle">
            <h1>Member Directory</h1>
        </div>
        <!-- End Page Title -->

        <div class="d-md-flex justify-content-md-end" style="padding-bottom: 20px">
            <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal"
                data-bs-target="#staticBackdrop">
                <i class="bi bi-plus-circle"></i> &nbsp;&nbsp;Add Job Profile
            </button>
        </div>

        <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true"
            data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLabel">Add New Job Profile</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <form method="post" action="/dashboard/addjobProfileData">
                            <div class="mb-3">
                                <label for="recipient-name" class="col-form-label">Company Type:</label>
                                <select name="companyType" class="form-control" id="companyType">
                                    <option value="">Select Company Type</option>
                                    <% for(let i in data) { %>
                                        <option value="<%= data[i].companyType %>" ><%= data[i].companyType %></option>
                                    <% } %>
                                </select>
                            </div>
                            <div class="mb-3">
                                <label for="recipient-name" class="col-form-label">Company Name:</label>
                                <input type="text" class="form-control shadow-none" id="companyName" name="companyName" placeholder="Enter Cast Name" required />
                            </div>
                            <div class="mb-3">
                                <label for="recipient-name" class="col-form-label">Company Description:</label>
                                <input type="text" class="form-control shadow-none" id="companyDec" name="companyDec" placeholder="Enter Cast Name" required />
                            </div>
                            <div class="mb-3">
                                <label for="recipient-name" class="col-form-label">Owner Name:</label>
                                <input type="text" class="form-control shadow-none" id="ownerName" name="OwnreName" placeholder="Enter Owner Name." required />
                            </div>
                            <div class="mb-3">
                                <label for="recipient-name" class="col-form-label">Total Staff:</label>
                                <input type="text" class="form-control shadow-none" id="totalStaff" name="totalStaff" placeholder="Enter Total Staff" required />
                            </div>
                            <div class="modal-footer">
                                <button type="submit" class="btn btn-primary">Add Member</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>

        <section class="section dashboard">
            <div class="row">
                <div class="shadow bg-white p-4 rounded">
                    <div>
                        <table class="table table-borderless datatable">
                            <thead>
                                <tr>
                                    <th scope="col">Sr No.</th>
                                    <th scope="col">Company Name</th>
                                    <th scope="col">Company Type</th>
                                    <th scope="col">Company Description</th>
                                    <th scope="col">Owner Name</th>
                                    <th scope="col">Total Staff</th>
                                    <th scope="col">Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% if(Data.length !==0) { %>
                                    <% Data.forEach((val,index)=> { %>
                                        <tr>
                                            <td scope="row" style="font-size: small;"><a href="#">#<%= index + 1 %></a></td>
                                            <td style="font-size: small;">
                                                <%= val.companyType %>
                                            </td>
                                            <td style="font-size: small;">
                                                <%= val.companyName %>
                                            </td>
                                            <td style="font-size: small;">
                                                <%= val.companyDec %>
                                            </td>
                                            <td style="font-size: small;">
                                                <%= val.OwnreName %>
                                            </td>
                                            <td style="font-size: small;">
                                                <%= val.totalStaff %>
                                            </td>
                                            <td>
                                                <a href="/dashboard/deleteJobProfile/<%= val._id %>" class="m-1"><i
                                                        class="bi bi-trash text-danger"></i></a>
                                                <a href="/dashboard/editJobProfile/<%= val._id %>" class="m-1"><i
                                                        class="bi bi-pencil-square"></i></a>
                                            </td>
                                        </tr>
                                        <% }) %>
                                            <% } %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </section>
    </main>
    <!-- End #main -->

    <%- include('Footer') %>